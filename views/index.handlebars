<main>
    <div class="row m-3">
        <img src="/assets/img/burger.jpg" alt="burger" class="mx-auto">
    </div>
    <h2 class="text-center mb-3">Tasty Burgers!</h2>
    <div class="text-center">
        <div class="row w-md-50 mx-auto mb-4">
            <div class="col-6">
                <h4>To-Eat</h4>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{>listed}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-6">
                <h4>Eaten</h4>
                <ul class="list-group">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{>devoured}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <form id="form" class="mx-auto">
            <label for="burger_name">New burger:</label>
            <input type="text" name="burger_name" id="burger_name" maxlength="100">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</main>
<script src="/assets/js/index.js"></script>
